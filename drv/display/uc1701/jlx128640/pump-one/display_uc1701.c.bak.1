/**
 * @brief   数字转换为字符串
 *
 * @param   lpData
 * @param   lNum
 * @param   lPoint
 */
static void NumTurn16(uint8_t *lpData, uint16_t lNum, uint8_t lPoint)
{
	uint8_t lI; 
	uint16_t lDiv1, lDiv2, lDiv3, lDiv4, lDiv5;
	lDiv1 = lDiv2 = lDiv3 = lDiv4 = lDiv5 = 0;

	for (lI = 0; lI < 6; lI++) 
		*(lpData + lI) = 0;

	lDiv1 = DIV_U16_10(lNum);
	/**(lpData + 5) = lNum - 10 * lDiv1 + '0' - FONT_ASCII_OMIT;*/
	*lpData = lNum - 10 * lDiv1 + '0' - FONT_ASCII_OMIT;

	if (lNum >= 10) 
	{ 
		lDiv2 = DIV_U16_10(lDiv1);
		*(lpData + 1) = lDiv1 - 10 * lDiv2 + '0' - FONT_ASCII_OMIT;
	}
	if (lNum >= 100) 
	{
		lDiv3 = DIV_U16_10(lDiv2);
		*(lpData + 2) = lDiv2 - 10 * lDiv3 + '0' - FONT_ASCII_OMIT;
	}
	if (lNum >= 1000) 
	{
		lDiv4 = DIV_U16_10(lDiv3);
		*(lpData + 3) = lDiv3 - 10 * lDiv4 + '0' - FONT_ASCII_OMIT;
	}
	if (lNum >= 10000) 
	{
		lDiv5 = DIV_U16_10(lDiv4);
		*(lpData + 4) = lDiv4 - 10 * lDiv5 + '0' - FONT_ASCII_OMIT;
	}

	// 移出小数点的位置
	/*for (lI = 0; lI < (5 - lPoint); lI++)*/
		/**(lpData + lI) = *(lpData + lI + 1);*/
	if (lPoint != POINT_HHHHH)
	{
		for (lI = 0; lI < (5 - lPoint); lI++)
			*(lpData + 5 - lI) = *(lpData + 5 - lI - 1);
	}
	else
		lI = 0;

	if (lI > 0)
	{
		// 添加小数点
		/**(lpData + lI) = '.' - FONT_ASCII_OMIT;*/
		*(lpData + lPoint) = '.' - FONT_ASCII_OMIT;

		/*if (*(lpData + (--lI)) == 0)*/
		if (*(lpData + lPoint + 1) == 0)
		{
			// 有需要的在小数点前面补0
			/**(lpData + lI) = '0' - FONT_ASCII_OMIT;*/
			*(lpData + lPoint + 1) = '0' - FONT_ASCII_OMIT;

			/*for ((lI += 2); lI < 5; lI++)*/
			for (lI = 1; lI < lPoint; lI++)
			{
				// 如果小数点后面有补0的
				/*if (*(lpData + lI) == 0)*/
					/**(lpData + lI) = '0' - FONT_ASCII_OMIT;*/
				if (*(lpData + lPoint - lI) == 0)
					*(lpData + lPoint - lI) = '0' - FONT_ASCII_OMIT;
				else
					break;
			}
		}
	}

	CharSwap(lpData, 6);
}

/**
 * @brief   显示大小一致的字符串
 *
 * @param   lpUnit
 * @param   lpFont
 * @param   lX
 * @param   lY
 * @param   lXSize
 * @param   lYSize
 * @param   lFSize
 */
void DisStrSet(uint8_t *lpStr, const uint8_t *lpFont, uint8_t lX, 
				uint8_t lY, uint8_t lXSize, uint8_t lYSize, uint8_t lFSize)
{
	uint8_t lTemp;

	lI = 0;

	while (*(lpStr + lI))
	{
		lTemp = *(lpStr + lI) - FONT_ASCII_OMIT;
		DisCharSet((lX + lI * lXSize), lY, (lpFont + lTemp * lFSize), 
					lXSize, lYSize);
		lI++;
	}
}

/**
 * @brief   显示数字 数字区域都受影响
 *
 * @param   lNum
 * @param   lPoint
 * @param   lX
 * @param   lY
 * @param   lXSize
 * @param   lYSize
 * @param   lControl
 */
void DisNumSet(uint16_t lNum, uint8_t lPoint, uint8_t lX, uint8_t lY, 
				uint8_t lXSize, uint8_t lYSize, uint8_t lControl)
{
	uint8_t lI, lTemp;
	uint8_t lData[6];
	const uint8_t *lpFont;
	uint8_t lSize;

	NumTurn16(lData, lNum, lPoint);

	if (lControl == DIS_JUSTIFY_LEFT)
		FlushLeft(lData, 6, 0);

	switch (lXSize)
	{
		case FONT_ASCII_8X16_SIZE_X:
			if (lYSize == FONT_ASCII_8X16_SIZE_Y)
			{
				lpFont = cFontAscii8x16;
				lSize = FONT_ASCII_8X16_SIZE;
			}
			break;

		case FONT_ASCII_16X32_SIZE_X:
			if (lYSize == FONT_ASCII_16X32_SIZE_Y)
			{
				lpFont = cFontAscii16x32;
				lSize = FONT_ASCII_16X32_SIZE;
			}
			break;

		case FONT_ASCII_5X10_SIZE_X:
			if (lYSize == FONT_ASCII_5X10_SIZE_Y)
			{
				lpFont = cFontAscii5x10;
				lSize = FONT_ASCII_5X10_SIZE;
			}
			break;

		default:
			break;
	}

	for (lI = 0; lI < 6; lI++)
	{
		lTemp = lData[lI];
		DisCharSet((lX + lI * lXSize), lY, (lpFont + lTemp * lSize), 
					lXSize, lYSize);
	}
}

